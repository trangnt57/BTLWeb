    <script src="{{asset('bundles/projecthoinhabao/material/js/material.min.js') }}"></script>
    <script src="{{asset('bundles/projecthoinhabao/js/jquery.dataTables.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#table-tacpham').DataTable();

        } );
    </script>

</body>

</html>















