
<html>

<head>

    <link href="{{ asset('bundles/projecthoinhabao/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/projecthoinhabao/material/css/ripples.min.css') }}" rel="stylesheet"> 
    <link href="{{ asset('bundles/projecthoinhabao/material/css/material-wfont.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/projecthoinhabao/css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/projecthoinhabao/css/jquery.dataTables.css') }}" rel="stylesheet">

    <title>Tác phẩm</title>
    <style type="text/css">
      
        ul{
            list-style: none;
        }
        .hoivien-info{
            font-size: 16px;
        }
         .mdi-content-add-circle-outline, .mdi-content-remove-circle-outline{
            color: blue;
        }
        .mdi-content-add-circle-outline:hover, .mdi-content-remove-circle-outline:hover{
            color: orange;
        }
    </style>

</head>

<body>
    {% include 'ProjectHoinhabaoBundle:Template:header.html.twig' %}
    <div class="container">
        <div class="jumbotron">
            <div class="row">
                <div class="col-md-3">
                    <div class="side-option">
                        <div class="toolbar">
                            <legend>Chức năng</legend>
                        </div>
                        <div class="content">
                            {% include 'ProjectHoinhabaoBundle:Hoivien:hoivien_function.html.twig' %}
                        </div>
                        <!--end content-->
                    </div>
                </div>
                <div class="col-md-9 hoivien-info" style="border-left: 2px solid red;">
                   {% for flashMessageb in app.session.flashbag.get('edit-tacpham') %}
                         <div class="alert alert-dismissable alert-success">
                            <button type="button" class="close" data-dismiss="alert">×</button>
                            {{ flashMessageb }}
                        </div>
                    {% endfor %}
                   <h3>Thông tin tác phẩm</h3>
                   <div class="row">
                       <div class = "col-md-1">
                             <i class="mdi-image-filter-1"></i>
                       </div>
                       <div class="col-md-2">
                           
                            <b>Mã Tác Phẩm</b>
                       </div>
                       <div class="col-md-9">
                            {{tacpham_item.matacpham}}
                       </div>
                    </div>
                    <div class="row">
                       <div class="col-md-1">
                            <i class="mdi-social-mood"></i>
                       </div>
                       <div class="col-md-2">
                            
                            <b>Tên Tác Phẩm</b>
                       </div>
                       <div class="col-md-9">
                            {{tacpham_item.tentacpham}}
                       </div>
                    </div>
                    <div class='row'>
                       <div class="col-md-1">
                            <i class = "mdi-action-today"></i>
                       </div>
                       <div class="col-md-2">
                            
                            <b>Ngày Sáng Tác</b>
                       </div>
                       <div class="col-md-9">
                            {{tacpham_item.NgaySangTac | date('Y-m-d')}}
                       </div>
                    </div>
                    <div class="row">
                       <div class="col-md-1">
                            <i class= 'mdi-action-receipt'></i>
                       </div>
                       <div class="col-md-2">
                            <b>Mô Tả</b>
                       </div>
                       <div class="col-md-9">
                            {{tacpham_item.MoTa}}
                       </div>
                    </div>
                    <div class="row">
                       <div class="col-md-1">
                            <i class = "mdi-av-my-library-books"></i>
                       </div>
                       <div class="col-md-2">
                            
                            <b>Thể Loại</b>
                       </div>
                       <div class="col-md-9">
                            {{tacpham_item.MaTheLoai}}
                       </div>
                    </div>
                    <div class="row">
                       <div class="col-md-1">
                            <i class = "mdi-social-share"></i>
                       </div>
                       <div class="col-md-2">
                            
                            <b>Liên Kết</b>
                       </div>
                       <div class="col-md-9">
                            <a>{{tacpham_item.LienKet}}</a>
                       </div>
                    </div>
                    <div class="row">
                       <div class="col-md-1">
                            <i class = "mdi-social-person"></i>
                        </div>
                       <div class="col-md-2">
                            
                            <b>Tác Giả</b>
                       </div>
                       <div class="col-md-9">
                            {{tacpham_item.MaHV}}
                       </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="{{ asset('bundles/projecthoinhabao/js/jquery-1.11.2.js') }}"></script>
    <script src="{{asset('bundles/projecthoinhabao/js/bootstrap.min.js') }}"></script>
    <script src="{{asset('bundles/projecthoinhabao/material/js/ripples.min.js') }}"></script>
    <script src="{{asset('bundles/projecthoinhabao/material/js/material.min.js') }}"></script>
    <script>
       $('.delete-tacpham').click(function(){
                
        if(confirm("Bạn thật sự muốn xóa tác phẩm này?")){
          var url      = window.location.href;
          url += "/delete";
          window.location = url;

        }else{
            location.reload();
        }
              
      });

       $('.mdi-content-add-circle-outline').click(function(){
                $(this).hide();
                $(this).parent().find('.mdi-content-remove-circle-outline').show();
                var thisid = $(this).attr('class').split(' ')[1];
                $('#'+ thisid).show();
            });
            $('.mdi-content-remove-circle-outline').click(function(){
                $(this).hide();
                $(this).parent().find('.mdi-content-add-circle-outline').show();
                var thisid = $(this).attr('class').split(' ')[1];
                $('#'+ thisid).hide();
            });
    </script>
</body>

</html>








