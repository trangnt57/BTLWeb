<html>

<head>

    <link href="{{ asset('bundles/projecthoinhabao/css/bootstrap.min.css') }}" rel="stylesheet">
   	<link href="{{ asset('bundles/projecthoinhabao/material/css/ripples.min.css') }}" rel="stylesheet"> 
    <link href="{{ asset('bundles/projecthoinhabao/material/css/material-wfont.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/projecthoinhabao/css/style.css') }}" rel="stylesheet">
    <title>Thêm hội viên</title>
    <style type="text/css">
        #addhoivien-button{
            font-size: 18px;
        }
        ul{
              list-style: none;
        }
         .mdi-content-add-circle-outline, .mdi-content-remove-circle-outline{
            color: blue;
        }
        .mdi-content-add-circle-outline:hover, .mdi-content-remove-circle-outline:hover{
            color: orange;
        }
    </style>

</head>

<body>
    {% include 'ProjectHoinhabaoBundle:Template:header.html.twig' %}
    <div class="container">
        <div class="jumbotron">
            <div class="row">
                <div class="col-md-3">
                    <div class="side-option">
                        <div class="toolbar">
                            <legend>Chức năng</legend>
                        </div>
                         <div class="content">
                            {% include 'ProjectHoinhabaoBundle:Hoivien:hoivien_function.html.twig' %}
                        </div>
                        <!--end content-->
                    </div>
                </div>
                <div class="col-md-9" style="border-left: 2px solid red;">
                    
                        {% for flashMessage in app.session.flashbag.get('add-hoivien') %}
                             <div class="alert alert-dismissable alert-success">
                                <button type="button" class="close" data-dismiss="alert">×</button>
                                {{ flashMessage }}
                            </div>
                        {% endfor %}
                        {{ form_start(form) }}
    					<fieldset>
                            {% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
                            {% if currentPath == path('project_hoinhabao_add')  %}
                                <legend>Thêm Hội Viên</legend>
                            {% else %}
                                <legend>Sửa Thông Tin Hội Viên</legend>
                            {% endif %}
                            
                                
                                <div class="form-group">
                                    {{ form_label(form.tendangnhap, 'Tên Đăng Nhập', {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                                    <div class="col-lg-10">
                                        {{ form_widget(form.tendangnhap)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.matkhau, 'Mật Khẩu', {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                                    <div class="col-lg-10">
                                         {{ form_widget(form.matkhau)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.hoten, 'Họ Tên', {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                                    <div class="col-lg-10">
                                        {{ form_widget(form.hoten)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.ngaysinh, 'Ngày Sinh', {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                                    <div class="col-lg-10">
                                         {{ form_widget(form.ngaysinh)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.gioitinh, 'Giới Tính', {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                                    <div class="col-lg-10">
                                        {{ form_widget(form.gioitinh)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.quequan, 'Quê Quán', {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                                    <div class="col-lg-10">
                                         {{ form_widget(form.quequan)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                                    <div class="col-lg-10">
                                         {{ form_widget(form.email)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.cmnd, 'CMND', {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                                    <div class="col-lg-10">
                                         {{ form_widget(form.cmnd)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.tieusu, 'Tiểu Sử', {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                                    <div class="col-lg-10">
                                        <span class="help-block">Các thông tin về tiểu sử của hội viên.</span>
                                        {{ form_widget(form.tieusu)}}
                                          
                                    </div>
                                </div>
                                
                               <div class="form-group">
                                    {{ form_label(form.matoasoan, 'Tòa Soạn', {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                                    <div class="col-lg-10">
                                         {{ form_widget(form.matoasoan)}}
                                    </div>
                                </div> 
                                <div style="color: white;">a</div>
                                <div class="form-group">
                                    {{ form_label(form.kichhoat, 'Kích Hoạt', {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                                    <div class="col-lg-10" >
                                         {{ form_widget(form.kichhoat)}}
                                    </div>
                                </div>  
                              
                                

                                <div class="form-group">
                                    <div class="col-lg-10"></div>
                                    <div class="col-lg-2">
                                        {{form_widget(form.create)}}
                                    </div>
                                </div>
                        </fieldset>
                        {{ form_end(form) }}
                 
            </div>
        </div>
    </div>
 	
    <script src="{{ asset('bundles/projecthoinhabao/js/jquery-1.11.2.js') }}"></script>
    <script src="{{asset('bundles/projecthoinhabao/js/bootstrap.min.js') }}"></script>
    <script src="{{asset('bundles/projecthoinhabao/material/js/ripples.min.js') }}"></script>
    <script src="{{asset('bundles/projecthoinhabao/material/js/material.min.js') }}"></script>
    <script>
         $('.mdi-content-add-circle-outline').click(function(){
                $(this).hide();
                $(this).parent().find('.mdi-content-remove-circle-outline').show();
                var thisid = $(this).attr('class').split(' ')[1];
                $('#'+ thisid).show();
            });
            $('.mdi-content-remove-circle-outline').click(function(){
                $(this).hide();
                $(this).parent().find('.mdi-content-add-circle-outline').show();
                var thisid = $(this).attr('class').split(' ')[1];
                $('#'+ thisid).hide();
            });
    </script>
</body>

</html>
